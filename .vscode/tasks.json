{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure",
      "type": "shell",
      "command": "cmake -S . -B build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake --build build --target banking_system -j",
      "group": "build",
      "problemMatcher": [],
      "dependsOn": "Configure"
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}/build/banking_system",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": [],
      "dependsOn": "Build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
